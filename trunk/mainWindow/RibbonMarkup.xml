  <Application.Views>

    <Ribbon>
      <Ribbon.HelpButton>
        <HelpButton CommandName="cmdHelpButton" />
      </Ribbon.HelpButton>

      <Ribbon.Tabs>
        <Tab CommandName="cmdTabMain">
          <!-- scary part -->
          <Tab.ScalingPolicy>
            <ScalingPolicy>
              <ScalingPolicy.IdealSizes>
                <Scale Group="cmdGroupFile" Size="Large" />
                <Scale Group="cmdGroupSettings" Size="Large" />
                <Scale Group="cmdGroupExit" Size="Large" />
              </ScalingPolicy.IdealSizes>
              <Scale Group="cmdGroupFile" Size="Medium" />
            </ScalingPolicy>
          </Tab.ScalingPolicy>

          <!-- useful part -->
          <Group CommandName="cmdGroupFile" SizeDefinition="ThreeButtons">
            <Button CommandName="cmdButtonCreate" />
            <Button CommandName="cmdButtonOpen" />
            <Button CommandName="cmdButtonSave" />
          </Group>

          <Group CommandName="cmdGroupSettings" SizeDefinition="OneButton">
            <Button CommandName="cmdButtonSettings" />
          </Group>

          <Group CommandName="cmdGroupExit" SizeDefinition="OneButton">
            <Button CommandName="cmdButtonExit" />

          </Group>

        </Tab>

        <Tab CommandName="cmdTabEmulation" >

          <!-- useful part -->
          <Group CommandName="cmdGroupEmulation" SizeDefinition="TwoButtons" >
            <Button CommandName="cmdButtonStart" />
            <Button CommandName="cmdButtonStop" />
          </Group>

        </Tab>


        <Tab CommandName="cmdTabMap" >

          <!-- useful part -->
          <Group CommandName="cmdGroupMap" SizeDefinition="TwoButtons" >
            <Button CommandName="cmdButtonCreateMap" />
            <Button CommandName="cmdButtonMarkerMap" />
          </Group>

        </Tab>


        <Tab CommandName="cmdTabFilters" >

          <!-- useful part -->
          <Group CommandName="cmdGroupFilters" SizeDefinition="TwoButtons" >
            <Button CommandName="cmdButtonCreateFilters" />
            <Button CommandName="cmdButtonOpenFilters" />
          </Group>

        </Tab>

        <Tab CommandName="cmdTabTools" >

          <!-- useful part -->
          <Group CommandName="cmdGroupTools" SizeDefinition="ThreeButtons" >
            <Button CommandName="cmdButtonGrid" />
            <Button CommandName="cmdButtonCalculate" />
            <Button CommandName="cmdButtonShowPolygons" />
          </Group>
          <Group CommandName="cmdGroupBS" >
            <Spinner CommandName="cmdBlockSize" />
          </Group>
        </Tab>


      </Ribbon.Tabs>



      <Ribbon.ApplicationMenu>
        <ApplicationMenu CommandName="cmdApplicationMenu">
          <MenuGroup CommandName="cmdMenuGroupFile">
            <Button CommandName='cmdButtonCreate' />
            <Button CommandName='cmdButtonOpen' />
            <Button CommandName='cmdButtonSave' />
          </MenuGroup>

          <MenuGroup CommandName="cmdMenuGroupSettings" >
            <Button CommandName='cmdButtonSettings' />
          </MenuGroup>

          <MenuGroup CommandName="cmdMenuGroupExit" >
            <Button CommandName='cmdButtonExit' />
          </MenuGroup>
        </ApplicationMenu>
      </Ribbon.ApplicationMenu>



    </Ribbon>
